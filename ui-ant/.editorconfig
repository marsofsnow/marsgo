# http://editorconfig.org
root = true

[*]
tab_width = 4
indent_style = tab #tab space
indent_size = 4

end_of_line = lf # 换行符类型 cr crlf  lf
charset = utf-8
trim_trailing_whitespace = true #否删除行尾空格
insert_final_newline = true  # 是否让文件以空行结束

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
